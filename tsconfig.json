// Команда tsc --init створює файл tsconfig.json, який слугує для налаштування TypeScript проєкта.

{
  "compilerOptions": {
    "rootDir": "./src", // исходные .ts файлы находятся в папке src
    "outDir": "./dist", // компилированные .js файлы будут находиться в папке dist.

    // Запретить использование JavaScript файлов
    "allowJs": false,

    // Разрешить использование синтетических импортов по умолчанию
    "allowSyntheticDefaultImports": true,

    // Включить метаданные декораторов (требуется для использования декораторов)
    "emitDecoratorMetadata": true,

    // Включить совместимость с модулями ES, чтобы использовать библиотеки, написанные на ES
    "esModuleInterop": true,

    // Включить поддержку экспериментальных декораторов
    "experimentalDecorators": true,

    // Использование параметра lib в конфигурации TypeScript Визначає версії ECMAScript та інших бібліотек, які доступні для використання у вашому коді. Это особенно важно, если вы хотите использовать новые возможности языка и работать
    //  с веб-приложениями, взаимодействуя с DOM - процесс, позволяющий веб-приложениям изменять и манипулировать содержимым,
    //   структурой и стилями HTML-документов. Это ключевой аспект веб-разработки, поскольку позволяет создавать динамические
    //    интерфейсы и взаимодействовать с пользователем.

    "lib": ["dom", "ES2021"],

    // Указать тип модуля (ES2020) для импорта/экспорта
    "module": "es2020",

    // Определить стратегию разрешения модулей
    "moduleResolution": "node",

    // Сохранять константные перечисления при компиляции
    "preserveConstEnums": true,

    // Пропустить проверку типов библиотек для улучшения производительности компиляции
    "skipLibCheck": true,

    // Включить строгую проверку на наличие null и undefined, TypeScript заборонятиме використання значень null або undefined там, де очікується об'єкт.
    "strictNullChecks": true,

    //"target" — задає версію ECMAScript для генерації вихідного коду, ваш код може використовувати новіші функції, такі як let, const, стрілочні функції та класи.
    "target": "es2019",

    // Це призведе до генерації .map-файлів разом з компільованими JavaScript-файлами. Ці файли містять інформацію, 
    // яка зв'язує ваш мініфікований або транспільований код із вихідними файлами. Source Map — це файл, який браузер використовує
    //  для відображення транспільованого або мініфікованого коду назад у вихідний код.


    "sourceMap": true
  },
  // Указать, какие файлы будут включены в компиляцию (все файлы с расширением .ts)
  "include": ["**/*.ts"]
}
